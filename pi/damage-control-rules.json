{
  "bashToolPatterns": [
    { "pattern": "\\brm\\s+(-[^\\s]*)*-[rRf]", "reason": "rm with recursive or force flags" },
    { "pattern": "\\brm\\s+--recursive", "reason": "rm with --recursive flag" },
    { "pattern": "\\brm\\s+--force", "reason": "rm with --force flag" },
    { "pattern": "\\bsudo\\s+rm\\b", "reason": "sudo rm" },
    { "pattern": "\\bchmod\\s+(-[^\\s]+\\s+)*777\\b", "reason": "chmod 777 (world writable)" },
    { "pattern": "\\bchmod\\s+-[Rr].*777", "reason": "recursive chmod 777" },
    { "pattern": "\\bchown\\s+-[Rr].*\\broot\\b", "reason": "recursive chown to root" },
    { "pattern": "\\bgit\\s+reset\\s+--hard\\b", "reason": "git reset --hard (use --soft or stash)" },
    { "pattern": "\\bgit\\s+clean\\s+(-[^\\s]*)*-[fd]", "reason": "git clean with force/directory flags" },
    { "pattern": "\\bgit\\s+push\\s+.*--force(?!-with-lease)", "reason": "git push --force (use --force-with-lease)" },
    { "pattern": "\\bgit\\s+push\\s+(-[^\\s]*)*-f\\b", "reason": "git push -f (use --force-with-lease)" },
    { "pattern": "\\bgit\\s+stash\\s+clear\\b", "reason": "git stash clear (deletes ALL stashes)" },
    { "pattern": "\\bgit\\s+reflog\\s+expire\\b", "reason": "git reflog expire (destroys recovery)" },
    { "pattern": "\\bgit\\s+gc\\s+.*--prune=now", "reason": "git gc --prune=now (loses dangling commits)" },
    { "pattern": "\\bgit\\s+filter-branch\\b", "reason": "git filter-branch (rewrites entire history)" },
    { "pattern": "\\bgit\\s+checkout\\s+--\\s*\\.", "reason": "Discards all uncommitted changes", "ask": true },
    { "pattern": "\\bgit\\s+restore\\s+\\.", "reason": "Discards all uncommitted changes", "ask": true },
    { "pattern": "\\bgit\\s+stash\\s+drop\\b", "reason": "Permanently deletes a stash", "ask": true },
    { "pattern": "\\bgit\\s+branch\\s+(-[^\\s]*)*-D", "reason": "Force deletes branch (even if unmerged)", "ask": true },
    { "pattern": "\\bgit\\s+push\\s+\\S+\\s+--delete\\b", "reason": "Deletes remote branch", "ask": true },
    { "pattern": "\\bgit\\s+push\\s+\\S+\\s+:\\S+", "reason": "Deletes remote branch (old syntax)", "ask": true },
    { "pattern": "\\bmkfs\\.", "reason": "filesystem format command" },
    { "pattern": "\\bdd\\s+.*of=/dev/", "reason": "dd writing to device" },
    { "pattern": "\\bkill\\s+-9\\s+-1\\b", "reason": "kill all processes" },
    { "pattern": "\\bkillall\\s+-9\\b", "reason": "killall -9" },
    { "pattern": "\\bhistory\\s+-c\\b", "reason": "clearing shell history" },
    { "pattern": "\\baws\\s+s3\\s+rm\\s+.*--recursive", "reason": "aws s3 rm --recursive" },
    { "pattern": "\\baws\\s+s3\\s+rb\\s+.*--force", "reason": "aws s3 rb --force" },
    { "pattern": "\\baws\\s+ec2\\s+terminate-instances\\b", "reason": "aws ec2 terminate-instances" },
    { "pattern": "\\baws\\s+rds\\s+delete-db-instance\\b", "reason": "aws rds delete-db-instance" },
    { "pattern": "\\baws\\s+cloudformation\\s+delete-stack\\b", "reason": "aws cloudformation delete-stack" },
    { "pattern": "\\baws\\s+dynamodb\\s+delete-table\\b", "reason": "aws dynamodb delete-table" },
    { "pattern": "\\baws\\s+lambda\\s+delete-function\\b", "reason": "aws lambda delete-function" },
    { "pattern": "\\baws\\s+iam\\s+delete-(role|user)\\b", "reason": "aws iam delete-role/user" },
    { "pattern": "\\bgcloud\\s+projects\\s+delete\\b", "reason": "gcloud projects delete" },
    { "pattern": "\\bgcloud\\s+compute\\s+instances\\s+delete\\b", "reason": "gcloud compute instances delete" },
    { "pattern": "\\bgcloud\\s+sql\\s+instances\\s+delete\\b", "reason": "gcloud sql instances delete" },
    { "pattern": "\\bgcloud\\s+container\\s+clusters\\s+delete\\b", "reason": "gcloud container clusters delete" },
    { "pattern": "\\bgcloud\\s+storage\\s+rm\\s+.*-r", "reason": "gcloud storage rm -r" },
    { "pattern": "\\bgcloud\\s+functions\\s+delete\\b", "reason": "gcloud functions delete" },
    { "pattern": "\\bgcloud\\s+run\\s+(services|jobs)\\s+delete\\b", "reason": "gcloud run delete" },
    { "pattern": "\\bgcloud\\s+iam\\s+service-accounts\\s+delete\\b", "reason": "gcloud iam service-accounts delete" },
    { "pattern": "\\bfirebase\\s+projects:delete\\b", "reason": "firebase projects:delete" },
    { "pattern": "\\bfirebase\\s+firestore:delete\\s+.*--all-collections", "reason": "firebase firestore:delete --all-collections" },
    { "pattern": "\\bfirebase\\s+database:remove\\b", "reason": "firebase database:remove" },
    { "pattern": "\\bvercel\\s+(remove|rm)\\b", "reason": "vercel remove" },
    { "pattern": "\\bvercel\\s+projects\\s+rm\\b", "reason": "vercel projects rm" },
    { "pattern": "\\bnetlify\\s+sites:delete\\b", "reason": "netlify sites:delete" },
    { "pattern": "\\bwrangler\\s+delete\\b", "reason": "wrangler delete" },
    { "pattern": "\\bwrangler\\s+(r2\\s+bucket|kv:namespace|d1|queues)\\s+delete\\b", "reason": "wrangler resource delete" },
    { "pattern": "DELETE\\s+FROM\\s+\\w+\\s*;", "reason": "DELETE without WHERE clause" },
    { "pattern": "\\bTRUNCATE\\s+TABLE\\b", "reason": "TRUNCATE TABLE" },
    { "pattern": "\\bDROP\\s+(TABLE|DATABASE|SCHEMA)\\b", "reason": "DROP TABLE/DATABASE/SCHEMA" },
    { "pattern": "DELETE\\s+FROM\\s+\\w+\\s+WHERE\\b", "reason": "SQL DELETE with WHERE", "ask": true }
  ],

  "zeroAccessPaths": [
    ".env",
    ".env.local",
    ".env.development",
    ".env.production",
    ".env.staging",
    ".env.test",
    "~/.ssh/",
    "~/.gnupg/",
    "~/.aws/",
    "~/.config/gcloud/",
    "~/.azure/",
    "~/.kube/",
    "~/.docker/",
