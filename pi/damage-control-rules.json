  ],

  "readOnlyPaths": [
    "/etc/",
    "/usr/",
    "/bin/",
    "/sbin/",
    "~/.bash_history",
    "~/.zsh_history",
    "~/.bashrc",
    "~/.zshrc",
    "~/.profile",
    "package-lock.json",
    "bun.lockb",
    "bun.lock",
    "yarn.lock",
    "pnpm-lock.yaml",
    "Cargo.lock",
    "go.sum",
    "uv.lock",
    "*.min.js",
    "*.min.css",
    "*.bundle.js",
    "dist/",
    "build/",
    ".next/",
    ".nuxt/",
    "__pycache__/",
    ".venv/",
    "target/"
  ],

  "noDeletePaths": [
    "~/.claude/",
    "~/.pi/",
    "CLAUDE.md",
    "AGENTS.md",
    "LICENSE",
    "README.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md",
    "SECURITY.md",
    ".git/",
    ".gitignore",
    ".gitattributes",
    ".github/",
    "Dockerfile",
    "docker-compose.yml",
    ".dockerignore"
  ]
}
